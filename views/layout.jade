html
  head
    title Maki

    link(rel='stylesheet', href='/css/bootstrap.css')
    link(rel='stylesheet', href='/css/maki.css')

    script(src='/js/jquery.js')
    script(src='/js/bootstrap.js')

  body

    .navbar.navbar-default.navbar-fixed-top
      .container
        .navbar-header
          button.navbar-toggle(type="button", data-toggle="collapse", data-target=".navbar-collapse")
            span.sr-only Toggle Navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href="/") Maki
        .navbar-collapse.collapse
          ul.nav.navbar-nav
            li.active
              a(href="/", title="Maki Homepage")
                i.glyphicon.glyphicon-home
                |  Home
            li
              a(href="/examples", title="Projects using Maki")
                i.glyphicon.glyphicon-leaf
                |  Examples
            li
              a(href="/users", title="People on this Maki, an example resource.")
                i.glyphicon.glyphicon-user
                |  Users
            if (!user)
              li
                a(href="/register") Sign Up &raquo;

          ul.nav.navbar-nav.navbar-right
            if (user)
              li
                a(href="/users/#{user.slug}") #{user.username}
              li
                a(href="/logout") Log Out
            else
              li
                a(href="/login") Log In

    .container
      block content

    footer
